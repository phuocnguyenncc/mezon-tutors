{
  "name": "mezon-tutors",
  "private": true,
  "workspaces": [
    "./apps/*",
    "./packages/*"
  ],
  "scripts": {
    "watch": "ultra -r --no-pretty --concurrency 400 watch",
    "vercel:install": "yarn set version 3.5 && yarn install",
    "web": "yarn build && cd apps/web && yarn dev",
    "web:extract": "DISABLE_EXTRACTION=false yarn workspace @mezon-tutors/web dev",
    "web:prod": "yarn workspace @mezon-tutors/web build",
    "web:prod:serve": "yarn workspace @mezon-tutors/web serve",
    "api": "yarn build && cd apps/api && yarn dev",
    "api:prod": "yarn workspace @mezon-tutors/api build",
    "r2": "cd apps/r2-worker && yarn dev",
    "postinstall": "yarn workspace @mezon-tutors/db build && yarn check-tamagui && yarn build",
    "build": "turbo build --filter=!@mezon-tutors/web",
    "format": "turbo format",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "upgrade:tamagui": "yarn up '*tamagui*'@latest '@tamagui/*'@latest",
    "upgrade:tamagui:canary": "yarn up '*tamagui*'@canary '@tamagui/*'@canary",
    "check-tamagui": "tamagui check",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf node_modules/.cache .turbo .next apps/*/node_modules/.cache apps/*/.next apps/*/.expo",
    "prepare": "husky"
  },
  "resolutions": {
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-refresh": "^0.14.0",
    "react-native-svg": "15.11.2",
    "react-native-web": "0.21.2",
    "zod": "^4.1.12"
  },
  "dependencies": {
    "@babel/runtime": "^7.24.6",
    "@hookform/resolvers": "^5.2.2",
    "@tamagui/cli": "^1.144.2",
    "@tamagui/react-native-svg": "^1.144.2",
    "@tamagui/react-native-web-lite": "^1.144.2",
    "check-dependency-version-consistency": "^4.1.0",
    "husky": "^9.1.6",
    "react-hook-form": "^7.71.1",
    "turbo": "^1.13.4",
    "typescript": "~5.8.3",
    "ultra-runner": "^3.10.5",
    "vitest": "^2.1.1",
    "zod": "^4.1.12"
  },
  "engines": {
    "node": ">=22",
    "npm": "10.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "lint-staged": "^15.2.10"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "packageManager": "yarn@4.11.0"
}
